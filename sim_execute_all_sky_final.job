#!/bin/bash
#SBATCH --job-name=AllSky
#SBATCH -p thin
#SBATCH -t 00:05:00
#SBATCH -N 1
#SBATCH --tasks-per-node=1
#SBATCH --cpus-per-task=128
#SBATCH --mem=224000
#SBATCH -o jobs/all_sky_10file.out
#SBATCH -e jobs/all_sky_10file.err
#SBATCH -v
#SBATCH --exclusive

module purge

source $HOME/.conda/envs/neutrino_clustering/bin/activate

sim_boxtype=L025N752/DMONLY/SigmaConstant00
sim_fullname=all_sky_final

python $HOME/neutrino_clustering_V2/simulation_numerical.py \
--directory $HOME/neutrino_clustering_V2/$sim_boxtype/$sim_fullname \
--sim_type all_sky \
--mass_gauge 12.0 \
--mass_lower 0.6 \
--mass_upper 2.0 \
--halo_num 10 \
--no-upto_Rvir

