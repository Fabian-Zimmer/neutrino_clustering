#!/bin/bash
#SBATCH --job-name=AllSky
#SBATCH -p thin
#SBATCH -t 04:00:00
#SBATCH -N 1
#SBATCH --tasks-per-node=1
#SBATCH --cpus-per-task=128
#SBATCH --mem=224000
#SBATCH -o jobs/number_density_band_AllSky.out
#SBATCH -e jobs/number_density_band_AllSky.err
#SBATCH -v
#SBATCH --exclusive

module purge

source $HOME/.conda/envs/neutrino_clustering/bin/activate

sim_boxtype=L025N752/DMONLY/SigmaConstant00
sim_fullname=high_res_all_sky

python $HOME/neutrino_clustering_V2/simulation_numerical.py \
-d $HOME/neutrino_clustering_V2/$sim_boxtype/$sim_fullname \
-st all_sky \
-mg 12.0 \
-mr 0.6 \
-hn 3 \
--no-upto_Rvir

